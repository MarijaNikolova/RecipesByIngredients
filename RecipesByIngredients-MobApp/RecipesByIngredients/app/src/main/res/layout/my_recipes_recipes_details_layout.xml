<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/my_recipes_recipes_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/my_recipes_recipes_details_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/my_recipes_recipes_details_ingredients_list"
        android:numColumns="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></GridView>

    <TextView
        android:id="@+id/my_recipes_recipes_details_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/my_recipes_recipes_details_source_url"
        android:layout_width="wrap_content"
        android:autoLink="web"
        android:hint="@string/my_recipes_recipes_details_link_placeholder"
        android:layout_height="wrap_content" />



</LinearLayout>