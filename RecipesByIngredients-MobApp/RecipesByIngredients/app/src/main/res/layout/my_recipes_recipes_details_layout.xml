<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_recipes_recipes_details_title"
        style="@style/TextViewsAndCheckBoxesStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/my_recipes_recipes_details_image"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10px"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_recipes_recipes_details_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="5px"
            android:layout_marginRight="5px"
            android:background="@drawable/shape"
            style="@style/TextViewsAndCheckBoxesStyle" />
        <TextView
            android:id="@+id/my_recipes_recipes_details_recipe_yield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:padding="5px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:visibility="gone"
            style="@style/TextViewsAndCheckBoxesStyle" />
        <TextView
            android:id="@+id/my_recipes_recipes_details_time_of_cooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:visibility="gone"
            android:padding="5px"
            android:layout_marginLeft="5px"
            style="@style/TextViewsAndCheckBoxesStyle" />

    </LinearLayout>
    <GridView
        android:id="@+id/my_recipes_recipes_details_ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_recipe_details_go_to_instructions_button"
        android:text="@string/my_recipes_recipes_details_go_to_instructions_button_text"/>
    <TextView
        android:id="@+id/my_recipes_recipes_details_source_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:hint="@string/my_recipes_recipes_details_link_placeholder" />


</LinearLayout>